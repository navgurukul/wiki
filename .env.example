# Server Configuration
PORT=8000
BIND_IP=0.0.0.0

# Database Configuration
DB_TYPE=postgres
DB_HOST=your-db-host
DB_PORT=5432
DB_USER=your-db-user
DB_PASS=your-db-password
DB_NAME=your-db-name
DB_SSL=false
DB_SCHEMA=public

# SSL Configuration
SSL_ENABLED=false
SSL_PORT=3443
SSL_PROVIDER=custom
SSL_FORMAT=pem
SSL_KEY=path/to/key.pem
SSL_CERT=path/to/cert.pem
SSL_PASSPHRASE=null
SSL_DHPARAM=null

# Other Settings
LOG_LEVEL=info
LOG_FORMAT=default
OFFLINE_MODE=false
HA_ENABLED=false
DATA_PATH=./data
BODY_PARSER_LIMIT=5mb